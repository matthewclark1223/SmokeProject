	file = {Full Text PDF:C\:\\Users\\Matthewclark989\\Zotero\\storage\\5PGC42TH\\Johnston Fay H. et al. - 2012 - Estimated Global Mortality Attributable to Smoke f.pdf:application/pdf;Snapshot:C\:\\Users\\Matthewclark989\\Zotero\\storage\\6NM6LCQ9\\ehp.html:text/html}
