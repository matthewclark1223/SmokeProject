	pmid = {17197425},
	note = {Publisher: National Academy of Sciences
Section: Physical Sciences},
	keywords = {Atlantic Multidecadal Oscillation, El Niño Southern Oscillation, fire history network, ocean warming, Pacific Decadal Oscillation},
	file = {Full Text PDF:C\:\\Users\\Matthewclark989\\Zotero\\storage\\M529USJI\\Kitzberger et al. - 2007 - Contingent Pacific–Atlantic Ocean influence on mul.pdf:application/pdf;Snapshot:C\:\\Users\\Matthewclark989\\Zotero\\storage\\UQ3WNULP\\543.html:text/html}
