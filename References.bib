	note = {Publisher: Taylor \& Francis
\_eprint: https://doi.org/10.1080/08958370600985875},
	file = {Snapshot:C\:\\Users\\Matthewclark989\\Zotero\\storage\\3MQ6UEUI\\08958370600985875.html:text/html}
}

@article{oneill_summary_2013,
