	shortjournal = {Atmospheric Environment},
	author = {Yue, Xu and Mickley, Loretta J. and Logan, Jennifer A. and Kaplan, Jed O.},
	urldate = {2021-03-07},
	date = {2013-10-01},
	langid = {english},
	keywords = {Aerosol concentration, Ensemble projection, Fuel load, Wildfire},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\Matt\\Zotero\\storage\\V2A2QRQL\\Yue et al. - 2013 - Ensemble projections of wildfire activity and carb.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\Matt\\Zotero\\storage\\7F75QEXP\\S1352231013004573.html:text/html},
